                        "TransparencyDataRecords": {
                            "type": "array",
                            "uniqueItems": true,
                            "minItems": 1,
                            "items": {
                                "description": "A valid FiRDS transparency record",
                                "type": "object"
                            }
                        },
                        "Derived": {
                            "type": "object",
                            "properties": {
                                "ToTV": {
                                    "description": "The DSB ToTV flag",
                                    "type": "boolean",
                                    "default": false
                                },
                                "ToTV-EffectiveDate": {
                                    "description": "The DSB ToTV earliest effective date",
                                    "type": "string",
                                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                                    "format": "date"
                                },
                                "uToTV": {
                                    "description": "The DSB uToTV flag",
                                    "type": "boolean"
                                },
                                "uToTV-EffectiveDate": {
                                    "type": "string",
                                    "description": "The DSB uToTV earliest effective date",
                                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                                    "format": "date"
                                }
                            },
                            "required": ["ToTV", "uToTV"],
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "Derived"
                    ],
                    "additionalProperties": false
                },
                "UK": {
                    "type": "object",
                    "properties": {
                        "RefDataRecords": {
                            "type": "object",
                            "properties": {
                                "RM": {
                                    "type": "array",
                                    "uniqueItems": true,
                                    "minItems": 1,
                                    "items": {
